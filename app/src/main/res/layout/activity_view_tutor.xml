<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.tutr.viewTutor">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rating:"
        android:id="@+id/view_rating"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Subjects:"
        android:id="@+id/view_subjects"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/ratingBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Description:"
        android:id="@+id/view_description"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/view_subjects"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/view_ownRating"
        android:layout_alignRight="@+id/display_counter"
        android:layout_alignEnd="@+id/display_counter" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hourly Rate:"
        android:id="@+id/view_rate"
        android:layout_marginTop="72dp"
        android:layout_below="@+id/view_description"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Email Address:"
        android:id="@+id/view_email"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/view_rate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Phone Number:"
        android:id="@+id/view_phone"
        android:layout_below="@+id/view_email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Leave Your Own Rating:"
        android:id="@+id/view_ownRating"
        android:layout_below="@+id/view_rating"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rating "
        android:id="@+id/display_rating"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/view_rating"
        android:layout_toEndOf="@+id/view_rating" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DESCRIPTION"
        android:id="@+id/display_description"
        android:layout_below="@+id/view_description"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/display_email"
        android:layout_alignEnd="@+id/display_email" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="rate"
        android:id="@+id/display_rate"
        android:layout_alignTop="@+id/view_rate"
        android:layout_alignRight="@+id/view_ownRating"
        android:layout_alignEnd="@+id/view_ownRating"
        android:layout_toEndOf="@+id/view_rate"
        android:layout_toRightOf="@+id/view_rate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="email"
        android:layout_alignTop="@+id/view_email"
        android:layout_toRightOf="@+id/view_email"
        android:id="@+id/display_email"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="phone"
        android:id="@+id/display_phone"
        android:layout_alignTop="@+id/view_phone"
        android:layout_toRightOf="@+id/view_phone"
        android:layout_alignRight="@+id/display_email"
        android:layout_alignEnd="@+id/display_email" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Subjects"
        android:id="@+id/display_subjects"
        android:layout_below="@+id/view_subjects"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/display_description"
        android:layout_alignEnd="@+id/display_description" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ratingCounter"
        android:id="@+id/display_counter"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/view_phone" />

</RelativeLayout>
